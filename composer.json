{
    "name": "devgeniem/wp-import-controller",
    "type": "wordpress-muplugin",
    "description": "A WordPress mu-plugin providing a modular multipurpose importer logic.",
    "authors": [
        {
            "name": "Ville Siltala",
            "email": "ville.siltala@geniem.com",
            "homepage": "http://geniem.com/",
            "role": "Developer"
        }
    ],
    "keywords": [
        "wordpress", "mu-plugin", "importer"
    ],
    "license": "GPL-3.0-or-later",
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {"Geniem\\Queue\\": "src/"}
    },
    "require": {
        "psr/log": "^1.1.3"
    },
    "require-dev": {
        "devgeniem/geniem-rules-codesniffer": "dev-master",
        "brainmaestro/composer-git-hooks": "dev-master"
    },
    "scripts": {
        "lint": "vendor/bin/phpcs --standard=Geniem plugin.php src/",
        "lint-without-warnings": "vendor/bin/phpcs --standard=Geniem plugin.php src/ --warning-severity=0",
        "cghooks": "vendor/bin/cghooks"
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "composer lint-without-warnings"
            ]
        }
    }
}
